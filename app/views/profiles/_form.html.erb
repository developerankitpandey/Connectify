<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
      <%= turbo_frame_tag "profile_form" do %>
        <%= form_with(model: profile, local: true) do |form| %>
          <% if profile.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
              <ul>
                <% profile.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
      
          <div class="form-group my-3">
            <%= form.label :first_name %>
            <%= form.text_field :first_name, class: 'form-control my-1' %>
          </div>
      
          <div class="form-group my-3">
            <%= form.label :bio %>
            <%= form.text_area :bio, class: 'form-control my-1' %>
          </div>
      
          <div class="form-group my-3">
            <%= form.label :location %>
            <%= form.text_field :location, class: 'form-control my-1' %>
          </div>
      
          <div class="form-group my-3">
            <%= form.label :birthday %>
            <%= form.date_select :birthday, class: 'form-control my-1' %>
          </div>
      
          <div class="form-group my-3">
            <%= form.label :gender %>
            <%= form.select :gender, ['Male', 'Female', 'Other'], { prompt: 'Select Gender' }, class: 'form-control my-1' %>
          </div>
      
          <div class="form-group">
            <%= form.submit class: 'btn btn-primary my-2 ' %>
          </div>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>