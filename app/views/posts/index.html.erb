<section class="">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
            <h1 class="text-center mt-5">Posts</h1>
      </div>
    </div>
  </div>
</section>

<section class="all-posts-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div id="posts" class="row">
          <% @posts.each do |post| %>
            <div class="col-md-4 mb-4">
              <div class="card h-100">
                <% if post.images.attached? %>
                  <div id="carousel-<%= post.id %>" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                      <% post.images.each_with_index do |image, index| %>
                        <div class="carousel-item <%= 'active' if index == 0 %>">
                          <%= image_tag image, class: "d-block w-100 card-img-top" %>
                        </div>
                      <% end %>
                    </div>
                    <a class="carousel-control-prev" href="#carousel-<%= post.id %>" role="button" data-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-<%= post.id %>" role="button" data-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                    </a>
                  </div>
                <% else %>
                  <img src="placeholder.jpg" class="card-img-top" alt="No image available">
                <% end %>
                <div class="card-body">
                  <p class="card-text"><%= post.user.email %></p>
                  <h5 class="card-title"><%= post.caption %></h5>
                </div>
                <div class="card-footer">
                  <%= link_to "Show this post", post, class: "btn btn-primary" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

