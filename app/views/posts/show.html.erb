<section>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <p style="color: green"><%= notice %></p>

        <%= render @post %>
        
        <div>
          <%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-primary my-2 mx-2 " %> |
          <%= link_to "Back to posts", posts_path, class: "btn btn-primary my-2 mx-2" %>
        
          <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-danger my-2 mx-2" %>
        </div>
      </div>
    </div>
  </div>
</section>

