<div class= "container nav-bar-container">
  <div class= "row">
    <div class= "col-lg-12">
        <nav class="navbar navbar-expand-lg bg-body-tertiary nav-bar">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Connectify</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item mx-2">
                  <%= link_to "Home", root_path %>
                </li>

                <li class="nav-item mx-2">
                  <%= link_to "Posts", posts_path %>
                </li>
                
                <% if user_signed_in? %>
                  <li class="nav-item mx-2">
                    <%= link_to "Profile", profiles_path %>
                  </li>
                <% end %>

                <%= link_to "conversation", conversations_path %>
            </ul>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
            <div class= "mx-3" >
                <% if user_signed_in? %>
                    <%= link_to "sign-out", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Wanna Sign-out" }, class: "btn btn-primary" %>
                <% else %>
                    <%= link_to "sign-in", new_user_session_path, class: "btn btn-primary mx-1" %>
                    <%= link_to "sign-up", new_user_registration_path, class: "btn btn-primary mx-1" %>
                <% end %>
            </div>
            </div>
        </div>
        </nav>
    </div>
  </div>
</div>